                    $html .= '<ul class="dropdown">';
                    foreach ($menu['sub'] as $subItems) {
                        $html .= '<li class="divider"></li>';
                        $html .= '<li class=""><a href="'.$subItems['url'].'">' . $subItems['label'] . '</a></li>';
                    }
                    $html .= '</ul>';
                }
                $html .= '</li>';
                $html .= '</ul>';
            }
        }
